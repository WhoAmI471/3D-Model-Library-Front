generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String            @id @default(uuid())
  name          String
  email         String            @unique
  password      String
  role          Role
  sphereId      String?
  createdAt     DateTime          @default(now())
  permissions   String[]
  deletedLogs   DeletedModelLog[] @relation("UserDeletedLogs")
  deletedModels DeletedModel[]    @relation("DeletedModels")
  logs          Log[]
  models        Model[]           @relation("UserModels")
  markedModels  Model[]           @relation("MarkedForDeletion")
  sphere        Sphere?           @relation("UserSphere", fields: [sphereId], references: [id])
}

model Model {
  id                String         @id @default(uuid())
  title             String
  description       String?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  fileUrl           String
  images            String[]       @default([])
  authorId          String?
  markedForDeletion Boolean        @default(false)
  markedById        String?
  markedAt          DateTime?
  deletionComment   String?
  logs              Log[]
  author            User?          @relation("UserModels", fields: [authorId], references: [id])
  markedBy          User?          @relation("MarkedForDeletion", fields: [markedById], references: [id])
  versions          ModelVersion[]
  projects          Project[]      @relation("ModelProjects")
  spheres           Sphere[]       @relation("ModelSpheres")
}

model ModelVersion {
  id        String   @id @default(uuid())
  version   String
  fileUrl   String
  images    String[]
  createdAt DateTime @default(now())
  modelId   String
  model     Model    @relation(fields: [modelId], references: [id])
}

model Project {
  id        String   @id @default(uuid())
  name      String
  city      String?
  imageUrl  String?
  createdAt DateTime @default(now())
  models    Model[]  @relation("ModelProjects")
}

model Sphere {
  id        String   @id @default(uuid())
  name      String   @unique
  iconName  String?
  createdAt DateTime @default(now())
  models    Model[]  @relation("ModelSpheres")
  users     User[]   @relation("UserSphere")
}

model Log {
  id        String   @id @default(uuid())
  action    String
  modelId   String?
  userId    String?
  createdAt DateTime @default(now())
  model     Model?   @relation(fields: [modelId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model DeletedModelLog {
  id        String   @id @default(uuid())
  action    String
  modelId   String?
  userId    String?
  createdAt DateTime @default(now())
  deletedAt DateTime @default(now())
  user      User?    @relation("UserDeletedLogs", fields: [userId], references: [id])
}

model DeletedModel {
  id              String   @id @default(uuid())
  originalModelId String? // ID оригинальной модели для связи с логами
  title           String
  description     String?
  images          String[] @default([])
  authorId        String?
  authorName      String? // Сохраняем имя автора на случай удаления пользователя
  sphereId        String?
  sphereName      String? // Сохраняем название сферы
  deletedById     String?
  deletedAt       DateTime @default(now())
  deletionComment String?
  createdAt       DateTime // Дата создания оригинальной модели
  updatedAt       DateTime // Дата последнего обновления оригинальной модели
  projectNames    String[] @default([]) // Названия проектов на момент удаления
  user            User?    @relation("DeletedModels", fields: [deletedById], references: [id])
}

enum Role {
  ADMIN
  ARTIST
  PROGRAMMER
  MANAGER
  ANALYST
}
